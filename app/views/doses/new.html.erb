<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.input :ingredient_id, collection: Ingredient.all.each {|ingre| ingre[:name]} %>
        <%= f.submit "add a dose", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
