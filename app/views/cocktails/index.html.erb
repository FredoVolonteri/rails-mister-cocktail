<h1 class="text-center">Check out these amazing Handmade Cocktails</h1>

<div class="container">
  <div class="row">
   <% @cocktails.each do |cocktail|%>
      <div class="col-xs-12 col-sm-4">
        <!-- insert <div class="card"> -->
        <div class="card">
        <ul>
          <li>
            <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
          </li>
      </ul>
      </div>
    </div>
    <% end  %>

<div class="container">
  <%= link_to "Add a new cocktail", new_cocktail_path %>
</div>
