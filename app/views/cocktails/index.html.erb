
<div class="banner-new" style="background-image: url('/assets/cocktail.jpg');">
  <div class="banner-content">
    <h1 class="text-center">Check out these amazing Handmade Cocktails</h1>


    <%= link_to "Add a new cocktail", new_cocktail_path, {:class => "btn btn-primary"}%>

  </div>
</div>


<div class="container">

  <div class="row">
   <% @cocktails.each do |cocktail|%>
      <div class="col-xs-12 col-sm-4">
        <!-- insert <div class="card"> -->
        <div class="card">
        <ul>
          <li>
            <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
          </li>
      </ul>
      </div>
    </div>
    <% end  %>

  </div>
</div>
