<div class="container">
  <h1><%= @cocktail.name %></h1>
      <%= cl_image_tag @cocktail.image, height: 300, width: 400, crop: :fill %>
      <%= link_to "Back", cocktails_path %>
<div>
  <% @cocktail.doses.each do |dose| %>
    <ul>
      <li>
        <h3><%= dose.description %> of <%= dose.ingredient.name %> </h3>

        <p><%= link_to "Delete dose", dose_path(dose), method: :delete,
        data: { confirm: "Are you sure?"}%></p>

      </li>
    </ul>
    <% end %>
  </div>

</div>


<h2>Add a dose to your cocktail</h2>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.input :ingredient_id, collection: Ingredient.all.each {|ingre| ingre[:name]} %>
        <%= f.submit "add a dose", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

